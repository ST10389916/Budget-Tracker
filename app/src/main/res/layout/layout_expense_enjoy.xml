<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_enjoy_parent"
    style="@style/LayoutExpenseBoxItem"
    android:contentDescription="@string/enjoy">

    <LinearLayout
        android:id="@+id/item_enjoy"
        style="@style/LayoutTitleExpenseParents">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ItemIconExpenseParents"
            android:background="@drawable/bg_tea_circle"
            android:minWidth="34dp"
            android:minHeight="34dp"
            android:src="@drawable/ic_drink" />

        <TextView
            style="@style/ItemTextExpenseParents"
            android:text="@string/enjoy"
            android:textColor="@color/tea" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_entertainment"
        style="@style/LayoutExpenseItemTop"
        android:contentDescription="@string/entertainment">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ItemIconExpenseTeaColor"
            android:src="@drawable/ic_entertainment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/entertainment"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>